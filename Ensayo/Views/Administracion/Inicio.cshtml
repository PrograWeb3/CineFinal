            </div>
            <div class="panel-footer panelGray">
                @Html.ActionLink("Seleccionar opcion", "Carteleras", "Administracion")
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-primary text-center panelOpcion">
            <div class="panel-body">
                <span class="glyphicon glyphicon-list-alt icon"></span>
                <h3>Gestión de Sedes </h3>
            </div>
            <div class="panel-footer panelGray">
                @Html.ActionLink("Seleccionar opcion", "Sedes", "Administracion")
            </div>
