                <span class="glyphicon glyphicon-film icon"></span>
                <h3>Gestión de Peliculas</h3>
            </div>
            <div class="panel-footer panelGray">
                @Html.ActionLink("Seleccionar opcion", "Peliculas", "Administracion")
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-12 col-xs-12">
        <div class="panel panel-primary text-center panelOpcion">
