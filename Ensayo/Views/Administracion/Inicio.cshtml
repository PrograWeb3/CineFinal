@{
    ViewBag.Title = "Inicio"; 
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="page-header">
            Administración
        </h1>
    </div>
</div>
<!-- /. ROW  -->
