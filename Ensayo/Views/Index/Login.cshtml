@model Ensayo.Usuarios

@{
    ViewBag.Title = "Login";
}





<div class="col-md-5 col-md-offset-3">

    <div class="main-login main-center">
        <h2>Login</h2>

        <form class="form-horizontal" method="post" action="#">




            @Html.AntiForgeryToken()

            <fieldset>
                <legend>Ingrese datos del administrador</legend>

                @Html.ValidationSummary(true, "", new { @class = "ErrorLogin" })



                <div class="form-group">
                    @Html.LabelFor(m => m.NombreUsuario, new { @class = "cols-sm-2 control-label" })
                    <div class="cols-sm-2">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"><span class="glyphicon glyphicon-user"></span></i></span>
                            @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control input-md" })
                        </div>
                        @Html.ValidationMessageFor(m => m.NombreUsuario)
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "cols-sm-2 control-label" })
                    <div class="cols-sm-2">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"><span class="glyphicon glyphicon-lock"></span></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-md" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>



                <div class="form-group ">
                    <input type="submit" class="btn btn-primary" value="Registrar">

                </div>


            </fieldset>
        </form>


    </div>
